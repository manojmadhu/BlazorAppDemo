@inherits LayoutComponentBase

<div class="page">
    <SidebarMenu />

    <main>
        <div class="top-row px-4">
            <ThemeSwitcher />           
            <a href="https://github.com/manojmadhu/BlazorAppDemo" target="_blank">
                <Icon Name="IconName.Git" /> Repository </a>
